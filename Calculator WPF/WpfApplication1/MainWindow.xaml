                Content="Off" HorizontalAlignment="Left" 
                Margin="117,96,0,0" VerticalAlignment="Top" 
                Width="97" Height="31" FontSize="18" 
                BorderThickness="2" Click="Off_Click_1"/>

        <Button Style="{DynamicResource ButtonStyle}" 
                Content="Del" HorizontalAlignment="Left" 
                Margin="15,96,0,0" VerticalAlignment="Top" 
                Width="46" Height="31" FontSize="18" 
                BorderThickness="2" Click="Del_Click"/>


        <Button Style="{DynamicResource ButtonStyle}" 
                Content="R" HorizontalAlignment="Left" 
                Margin="66,96,0,0" VerticalAlignment="Top" 
                Width="46" Height="31" FontSize="18" 
