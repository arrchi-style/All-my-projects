                Content="1" HorizontalAlignment="Left" 
                Margin="15,204,0,0" VerticalAlignment="Top" 
                Width="46" Height="31" FontSize="18" 
                BorderThickness="2" Click="Button_Click_1"/>

        <Button Style="{DynamicResource ButtonStyle}" 
                Content="2" HorizontalAlignment="Left" 
                Margin="66,204,0,0" VerticalAlignment="Top" 
                Width="46" Height="31" FontSize="18" 
                BorderThickness="2" Click="Button_Click_1"/>

        <Button Style="{DynamicResource ButtonStyle}" 
                Content="3" HorizontalAlignment="Left" 
                Margin="117,204,0,0" VerticalAlignment="Top" 
                Width="46" Height="31" FontSize="18"
                BorderThickness="2" Click="Button_Click_1"/>

        <Button Style="{DynamicResource ButtonStyle}" 
                Content="-" HorizontalAlignment="Left" 
                Margin="168,204,0,0" VerticalAlignment="Top" 
                Width="46" Height="31" FontSize="18" 
                BorderThickness="2" Click="Button_Click_1"/>

        <Button Style="{DynamicResource ButtonStyle}" 
                Content="0" HorizontalAlignment="Left"
                Margin="15,240,0,0" VerticalAlignment="Top" 
                Width="46" Height="31" FontSize="18" 
                BorderThickness="2" Click="Button_Click_1"/>

        <Button Style="{DynamicResource ButtonStyle}" 
                Content="=" HorizontalAlignment="Left" 
                Margin="66,240,0,0" VerticalAlignment="Top" 
                Width="97" Height="31" FontSize="18" 
                BorderThickness="2" Click="Result_click"/>

